{
  "rewrites": [
    {
      "source": "/blog",
      "destination": "https://blog-on-hashnode.vercel.app/blog"
    },
    {
      "source": "/blog/:path*",
      "destination": "https://blog-on-hashnode.vercel.app/blog/:path*"
    },
    {
      "source": "/_next/:path*",
      "destination": "https://blog-on-hashnode.vercel.app/_next/:path*"
    },
    {
      "source": "/((?!api|_next/static|favicon.ico|blog).*)",
      "destination": "/index.html"
    }
  ]
}
